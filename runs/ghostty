#!/bin/bash

# Download the .deb package
curl -LO https://github.com/mkasberg/ghostty-ubuntu/releases/download/1.0.1-0-ppa2/ghostty_1.0.1-0.ppa2_amd64_22.04.deb

# Check if the file was downloaded successfully
if [ ! -f ghostty_1.0.1-0.ppa2_amd64_22.04.deb ]; then
    echo "Error: .deb file download failed!"
    exit 1
fi

# Install the .deb package
sudo dpkg -i ghostty_1.0.1-0.ppa2_amd64_22.04.deb

# Handle any missing dependencies
sudo apt-get install -f -y

# Check if the installation was successful
if [ $? -eq 0 ]; then
    echo "Installation successful!"
else
    echo "Installation failed!"
fi
